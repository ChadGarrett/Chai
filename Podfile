target 'Chai' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
#  use_frameworks!
use_modular_headers!

  # Pods for Chai

  # UI
  pod 'PureLayout'
  pod 'Reusable'
  pod 'Eureka'
  pod 'NotificationBannerSwift'
  pod 'AttributedStringBuilder'
  
  # Data
  pod 'Alamofire'
  pod 'RealmSwift'
  pod 'R.swift'
  pod 'SwiftyJSON'
  
  # Debuging and Logging
  pod 'Aardvark'
  pod 'SwiftyBeaver'
  
  pod 'SwiftLint'
  
  target 'ChaiTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

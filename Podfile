platform :ios, '12.1'

target 'Chai' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Chai

  # UI
  pod 'PureLayout'
  pod 'Reusable'
  pod 'Eureka'
  pod 'R.swift'
  pod 'NotificationBannerSwift'
  
  # Data
  pod 'RealmSwift'
  
  # Debuging and Logging
  pod 'Aardvark'
  pod 'SwiftyBeaver'

  target 'ChaiTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
